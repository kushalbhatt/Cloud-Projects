<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#f2f2f2">

    <ImageView
        android:id="@+id/big_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:tintMode="multiply"
        android:tint="#b2cdff"/>

    <TextView
        android:id="@+id/big_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Free-Cast"
        android:textSize="18dp"
        android:textColor="#101010"
        android:layout_toRightOf="@id/big_image"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif-smallcaps"/>

    <TextView
        android:id="@+id/big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/big_title"
        android:layout_toRightOf="@+id/big_image"
        android:textSize="16dp"
        android:text="Message"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/big_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/big_text"
        android:paddingTop="7dp"
        android:layout_toRightOf="@+id/big_image"
        android:textSize="16dp"
        android:textColor="@color/red"
        android:paddingLeft="10dp"
        android:text="Hotness"/>

    <ImageView
        android:id="@+id/big_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@android:drawable/ic_dialog_map"
        android:tint="@android:color/holo_green_dark"
        android:layout_alignParentTop="true"/>
</RelativeLayout>